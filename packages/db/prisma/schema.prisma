// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["fullTextSearchPostgres"]
  engineType      = "client"
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "../src/generated/zod"
}

generator kysely {
  provider = "prisma-kysely"

  // Optionally provide a destination directory for the generated file
  // and a filename of your choice
  output       = "../src/generated/kysely"
  fileName     = "types.ts"
  // Optionally generate runtime enums to a separate file
  enumFileName = "enums.ts"
  readOnlyIds  = true
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id String @id @default(cuid(2))

  email        String @unique
  passwordHash String

  name        String?
  gender      Gender?
  dateOfBirth DateTime? @db.Timestamptz(3)

  lastLogin DateTime? @db.Timestamptz(3)

  // relations
  dailyLogs DailyLog[]
}

model DailyLog {
  id     String   @id @default(cuid(2))
  userId String
  user   User     @relation(fields: [userId], references: [id])
  date   DateTime @db.Timestamptz(3)

  // relations
  logs Log[]

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  @@unique([userId, date])
}

enum LogType {
  PAIN
  TIREDNESS
  DROWSINESS
  NAUSEA
  LACK_OF_APPETITE
  SHORTNESS_OF_BREATH
  DEPRESSION
  ANXIETY
  WELLBEING
  OTHERS
}

model Log {
  id         String   @id @default(cuid(2))
  dailyLog   DailyLog @relation(fields: [dailyLogId], references: [id])
  dailyLogId String

  logType   LogType
  logValue  Int?
  extraData Json? // keeping as json for now for flexibility {text, logName etc.}

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}
